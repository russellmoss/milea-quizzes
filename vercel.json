{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://*.thinkific.com https://thinkific.com https://learn.thinkific.com"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/config.js",
      "headers": {
        "content-type": "application/javascript",
        "cache-control": "no-cache"
      }
    },
    {
      "src": "/dist/(.*)",
      "headers": {
        "content-type": "text/css",
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 